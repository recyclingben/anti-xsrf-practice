Hello! Welcome to the account creator.

<form onsubmit="return false;">
    <input type="text" placeholder="Name" id="username">
    </input>

    <br>

    <input type="text" placeholder="Password" id="pwd">

    </input>

    <br>

    <input type="text" placeholder="Favorite Color" id="favorite-color">

    <br>

    <button onclick="createAccount()">
        Create Account
    </button>
</form>

<script>
    const createAccount = () => {
        const xhttp = new XMLHttpRequest();

        xhttp.open("POST", "/account/create", true);
        xhttp.setRequestHeader("Content-Type", "application/json;charset=UTF-8");

        xhttp.send(JSON.stringify({
            username: document.getElementById("username").value,
            pwd: document.getElementById("pwd").value,
            favoriteColor: document.getElementById("favorite-color").value
        }));
    };
</script>
